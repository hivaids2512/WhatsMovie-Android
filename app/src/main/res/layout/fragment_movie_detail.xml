<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragment.MovieDetailActivityFragment">

    <ImageView
        android:id="@+id/movie_thumb"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/toy" />

    <TextView android:id="@+id/message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movie_thumb"
        android:textSize="18sp"
        android:text="A cowboy doll is profoundly threatened and jealous when a new spaceman figure supplants him as top toy in a boy's room." />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="2.0"
        android:layout_below="@+id/message_view"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
